generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth.js Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// User Model
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          UserRole  @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  accounts          Account[]
  sessions          Session[]
  workouts          Workout[]
  clubSessions      ClubSession[]
  clubMemberships   ClubMember[]
  streaks           Streak[]
  weeklyStats       WeeklyStat[]
  sentReactions     WorkoutReaction[] @relation("SentReactions")
  coachRoutines     CoachRoutine[]    @relation("CoachRoutines")
  routineCompletions RoutineCompletion[]

  @@index([email])
  @@index([role])
}

// Workout Categories
enum WorkoutCategory {
  RUNNING
  STRENGTH
  WALKING
  SPORTS
}

// User Roles
enum UserRole {
  USER
  COACH
  ADMIN
}

// Workout Status
enum WorkoutStatus {
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

// Workout Model
model Workout {
  id            String          @id @default(cuid())
  userId        String
  category      WorkoutCategory
  status        WorkoutStatus   @default(IN_PROGRESS)
  
  // Timing
  startTime     DateTime        @default(now())
  endTime       DateTime?
  totalDuration Int?            // in seconds
  goalDuration  Int?            // in seconds (optional time goal)
  
  // Running/Walking specific
  distance      Float?          // in kilometers
  goalDistance  Float?          // in kilometers (optional distance goal)
  pace          Float?          // minutes per km
  
  // Calories
  caloriesBurned Int?
  caloriesSource String?        // "manual", "estimated", "tracker"
  
  // Notes
  notes         String?         @db.Text
  
  // Club session (if part of one)
  clubSessionId String?
  
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  // Relations
  user          User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  clubSession   ClubSession?    @relation(fields: [clubSessionId], references: [id])
  splits        Split[]
  activities    Activity[]
  reactions     WorkoutReaction[]

  @@index([userId])
  @@index([clubSessionId])
  @@index([startTime])
  @@index([category])
}

// Split Model (for running/walking)
model Split {
  id          String   @id @default(cuid())
  workoutId   String
  splitNumber Int
  distance    Float    // in km (usually 1km or custom)
  duration    Int      // in seconds
  pace        Float    // minutes per km
  timestamp   DateTime @default(now())

  workout     Workout  @relation(fields: [workoutId], references: [id], onDelete: Cascade)

  @@index([workoutId])
}

// Activity Model (for strength/sports)
model Activity {
  id          String   @id @default(cuid())
  workoutId   String
  name        String   // e.g., "Push-ups", "Squats", "Basketball"
  sets        Int?
  reps        Int?
  weight      Float?   // in kg
  duration    Int?     // in seconds
  notes       String?
  timestamp   DateTime @default(now())

  workout     Workout  @relation(fields: [workoutId], references: [id], onDelete: Cascade)

  @@index([workoutId])
}

// Club Session Model
model ClubSession {
  id          String    @id @default(cuid())
  hostId      String
  code        String    @unique // 6-character code
  name        String?
  isActive    Boolean   @default(true)
  startTime   DateTime  @default(now())
  endTime     DateTime?
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  host        User         @relation(fields: [hostId], references: [id], onDelete: Cascade)
  members     ClubMember[]
  workouts    Workout[]

  @@index([hostId])
  @@index([code])
  @@index([isActive])
}

// Club Member Model
model ClubMember {
  id            String      @id @default(cuid())
  userId        String
  clubSessionId String
  joinedAt      DateTime    @default(now())
  leftAt        DateTime?

  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  clubSession   ClubSession @relation(fields: [clubSessionId], references: [id], onDelete: Cascade)

  @@unique([userId, clubSessionId])
  @@index([userId])
  @@index([clubSessionId])
}

// Streak Model
model Streak {
  id            String   @id @default(cuid())
  userId        String
  currentStreak Int      @default(0)
  longestStreak Int      @default(0)
  lastWorkoutAt DateTime?
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId])
  @@index([userId])
}

// Weekly Stats Model
model WeeklyStat {
  id              String          @id @default(cuid())
  userId          String
  weekStart       DateTime        // Monday of the week
  weekEnd         DateTime        // Sunday of the week
  
  totalWorkouts   Int             @default(0)
  totalDuration   Int             @default(0) // in seconds
  totalDistance   Float           @default(0) // in km
  totalCalories   Int             @default(0)
  
  // By category
  runningCount    Int             @default(0)
  strengthCount   Int             @default(0)
  walkingCount    Int             @default(0)
  sportsCount     Int             @default(0)
  
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  user            User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, weekStart])
  @@index([userId])
  @@index([weekStart])
}

// Workout Reaction Model (for LIVE reactions during club sessions)
model WorkoutReaction {
  id            String   @id @default(cuid())
  fromUserId    String
  toWorkoutId   String
  emoji         String   // e.g., "üí™", "üî•", "‚ö°", "üëè", "üèÉ"
  createdAt     DateTime @default(now())

  fromUser      User     @relation("SentReactions", fields: [fromUserId], references: [id], onDelete: Cascade)
  toWorkout     Workout  @relation(fields: [toWorkoutId], references: [id], onDelete: Cascade)

  @@index([toWorkoutId])
  @@index([fromUserId])
  @@index([createdAt])
}

// Coach Routine Model (workout templates created by coaches)
model CoachRoutine {
  id                String          @id @default(cuid())
  coachId           String
  name              String
  description       String?
  category          WorkoutCategory
  preWorkoutMessage String?         @db.VarChar(500) // Message shown before workout starts
  playlistLink      String?         // Spotify/music playlist URL
  isActive          Boolean         @default(true)
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  coach         User            @relation("CoachRoutines", fields: [coachId], references: [id], onDelete: Cascade)
  exercises     RoutineExercise[]
  completions   RoutineCompletion[]

  @@index([coachId])
  @@index([category])
  @@index([isActive])
}

// Routine Exercise Model (individual exercises within a routine)
model RoutineExercise {
  id            String       @id @default(cuid())
  routineId     String
  name          String
  description   String?
  duration      Int          // Duration in seconds
  countDirection String      @default("down") // "up" or "down"
  restAfter     Int?         // Rest duration in seconds after this exercise
  orderIndex    Int          // Order in the routine
  message       String?      @db.VarChar(100) // Coach's motivational message for this exercise
  
  // Optional exercise details
  sets          Int?
  reps          Int?
  
  routine       CoachRoutine @relation(fields: [routineId], references: [id], onDelete: Cascade)

  @@index([routineId])
  @@index([orderIndex])
}

// Routine Completion Model (tracks who did what routines)
model RoutineCompletion {
  id            String       @id @default(cuid())
  routineId     String
  userId        String
  workoutId     String?      // Link to the actual workout if created
  completed     Boolean      @default(false) // Did they finish the whole routine?
  exercisesCompleted Int     @default(0)     // How many exercises they completed
  startedAt     DateTime     @default(now())
  completedAt   DateTime?
  
  routine       CoachRoutine @relation(fields: [routineId], references: [id], onDelete: Cascade)
  user          User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([routineId])
  @@index([userId])
  @@index([startedAt])
}
